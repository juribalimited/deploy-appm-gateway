{
    "$schema": "https://schema.management.azure.com/schemas/0.1.2-preview/CreateUIDefinition.MultiVm.json#",
    "handler": "Microsoft.Azure.CreateUIDef",
    "version": "0.1.2-preview",
    "parameters": {
        "basics": [],
        "steps": [
            {
                "name": "networkingConfig",
                "label": "Networking",
                "elements": [
                    {
                        "name": "networkSection",
                        "label": "",
                        "type": "Microsoft.Common.Section",
                        "elements": [
                            {
                                "name": "vnet",
                                "type": "Microsoft.Network.VirtualNetworkCombo",
                                "label": {
                                    "virtualNetwork": "Virtual network",
                                    "subnets": "Subnets"
                                },
                                "toolTip": {
                                    "virtualNetwork": "",
                                    "subnets": ""
                                },
                                "defaultValue": {
                                    "name": "vnet01",
                                    "addressPrefixSize": "/16"
                                },
                                "constraints": {
                                    "minAddressPrefixSize": "/16"
                                },
                                "options": {
                                    "hideExisting": false
                                },
                                "subnets": {
                                    "gatewaySubnet": {
                                        "label": "Gateway subnet",
                                        "defaultValue": {
                                            "name": "gateway-snet",
                                            "addressPrefixSize": "/24"
                                        },
                                        "constraints": {
                                            "minAddressPrefixSize": "/24",
                                            "minAddressCount": 12,
                                            "requireContiguousAddresses": true
                                        }
                                    },
                                    "guacamoleSubnet": {
                                        "label": "Guacamole subnet",
                                        "defaultValue": {
                                            "name": "guacamole-snet",
                                            "addressPrefixSize": "/26"
                                        },
                                        "constraints": {
                                            "minAddressPrefixSize": "/26",
                                            "minAddressCount": 8,
                                            "requireContiguousAddresses": true
                                        }
                                    }
                                },
                                "visible": true
                            }
                        ],
                        "visible": true
                    },
                    {
                        "name": "nsgSection",
                        "type": "Microsoft.Common.Section",
                        "label": "Network security groups",
                        "elements": [
                            {
                                "name": "gatewaySubnetNSGName",
                                "type": "Microsoft.Common.TextBox",
                                "label": "Gateway subnet NSG name",
                                "toolTip": "",
                                "defaultValue": "gateway-snet-nsg",
                                "constraints": {
                                    "required": true,
                                    "regex": "^[a-z0-9A-Z-]{3,40}$",
                                    "validationMessage": "The security group name must be between 3 and 40 characters long and contain letters, numbers and hyphens only."          
                                }
                            },
                            {
                                "name": "guacamoleSubnetNSGName",
                                "type": "Microsoft.Common.TextBox",
                                "label": "Guacamole subnet NSG name",
                                "toolTip": "",
                                "defaultValue": "guacamole-snet-nsg",
                                "constraints": {
                                    "required": true,
                                    "regex": "^[a-z0-9A-Z-]{3,40}$",
                                    "validationMessage": "The security group name must be between 3 and 40 characters long and contain letters, numbers and hyphens only."          
                                }
                            }
                        ],
                        "visible": true
                    }
                ]
            },
            {
                "name": "gatewayConfig",
                "label": "AppM Desktop Gateway",
                "elements": [
                    {
                        "name": "containerSection",
                        "type": "Microsoft.Common.Section",
                        "label": "WebApp settings",
                        "elements": [
                            {
                                "name": "gatewayWebAppName",
                                "type": "Microsoft.Common.TextBox",
                                "label": "Gateway WebApp Name",
                                "toolTip": "",
                                "defaultValue": "appm-gateway",
                                "constraints": {
                                    "required": true,
                                    "regex": "^[a-z0-9A-Z-]{3,40}$",
                                    "validationMessage": "The webapp name must be between 3 and 40 characters long and contain letters, numbers and hyphens only."          
                                }
                            },
                            {
                                "name": "gatewayImageName",
                                "type": "Microsoft.Common.DropDown",
                                "label": "AppM version",
                                "placeholder": "",
                                "defaultValue": "Latest",
                                "toolTip": "",
                                "constraints": {
                                    "allowedValues": [
                                        {
                                            "label": "Latest",
                                            "value": "sha-d9174c1"
                                        }
                                    ],
                                    "required": true
                                },
                                "visible": true
                            },
                            {
                                "name": "customerName",
                                "type": "Microsoft.Common.TextBox",
                                "label": "Customer Name",
                                "toolTip": "Customer identifier. This will be used as part of the Gateway WebApp configuration. This can be found from main AppM website address, for example %customerName%.appm.juriba.app",
                                "constraints": {
                                    "required": true,
                                    "regex": "^[a-z]{3,10}$",
                                    "validationMessage": "The customer name must be between 3 and 10 characters long and contain letters only."          
                                }
                            }
                        ],
                        "visible": true
                    },
                    {
                        "name": "encryptionSection",
                        "type": "Microsoft.Common.Section",
                        "label": "Encryption settings",
                        "elements": [
                            {
                                "name": "gatewayEncryptionInfo",
                                "type": "Microsoft.Common.InfoBox",
                                "visible": true,
                                "options": {
                                  "icon": "Info",
                                  "text": "Please enter the encryption key generated by AppM.",
                                  "uri": "https://docs.juriba.com/appm/next"
                                }
                            },
                            {
                                "name": "gatewayEncryptionKey",
                                "type": "Microsoft.Common.PasswordBox",
                                "label": {
                                    "password": "Encryption key",
                                    "confirmPassword": "Confirm key"
                                },
                                "toolTip": "",
                                "constraints": {
                                    "required": true        
                                }
                            }
                        ],
                        "visible": true
                    },
                    {
                        "name": "diagnosticSection",
                        "type": "Microsoft.Common.Section",
                        "label": "Diagnostic settings",
                        "elements": [
                            {
                                "name": "gatewayDiagnosticInfo",
                                "type": "Microsoft.Common.InfoBox",
                                "visible": true,
                                "options": {
                                  "icon": "Info",
                                  "text": "AppM Desktop Gateway has a troubleshooting tool, the credentials provided will be used to secure access to it.",
                                  "uri": "https://docs.juriba.com/appm/next"
                                }
                            },
                            {
                                "name": "diagnosticUsername",
                                "type": "Microsoft.Common.TextBox",
                                "label": "Username",
                                "toolTip": "",
                                "constraints": {
                                    "required": true,
                                    "regex": "^[a-z0-9A-Z]{3,15}$",
                                    "validationMessage": "The username must be between 3 and 15 characters long and contain letters and numbers only."          
                                }
                            },
                            {
                                "name": "diagnosticPassword",
                                "type": "Microsoft.Common.PasswordBox",
                                "label": {
                                    "password": "Password",
                                    "confirmPassword": "Confirm password"
                                },
                                "toolTip": "",
                                "constraints": {
                                    "required": true,
                                    "regex": "^[a-z0-9A-Z]{3,30}$",
                                    "validationMessage": "The password must be between 3 and 30 characters long and contain letters and numbers only."          
                                }
                            }
                        ],
                        "visible": true
                    }
                ]
            },
            {
                "name": "guacamoleConfig",
                "label": "Apache Guacamole",
                "elements": [            
                    {
                        "name": "guacamoleInstanceName",
                        "type": "Microsoft.Common.TextBox",
                        "label": "Container instance name",
                        "toolTip": "",
                        "defaultValue": "guacamole-ci",
                        "constraints": {
                            "required": true,
                            "regex": "^[a-z0-9A-Z-]{3,40}$",
                            "validationMessage": "The instance name must be between 3 and 40 characters long and contain letters, numbers and hyphens only."          
                        }
                    }
                ]
            }
        ],
        "outputs": {
            "virtualNetworkNewOrExisting": "[steps('networkingConfig').networkSection.vnet.newOrExisting]",
            "virtualNetworkName": "[steps('networkingConfig').networkSection.vnet.name]",
            "virtualNetworkAddressPrefixes": "[steps('networkingConfig').networkSection.vnet.addressPrefixes]",
            "gatewaySubnetName": "[steps('networkingConfig').networkSection.vnet.gatewaySubnet.name]",
            "gatewaySubnetAddressPrefix": "[steps('networkingConfig').networkSection.vnet.gatewaySubnet.addressPrefixes]",
            "guacamoleSubnetName": "[steps('networkingConfig').networkSection.vnet.guacamoleSubnet.name]",
            "guacamoleSubnetAddressPrefix": "[steps('networkingConfig').networkSection.vnet.guacamoleSubnet.addressPrefixes]",
            "gatewaySubnetNSGName": "[steps('networkingConfig').nsgSection.gatewaySubnetNSGName]",
            "guacamoleSubnetNSGName": "[steps('networkingConfig').nsgSection.guacamoleSubnetNSGName]",
            "gatewayWebAppName": "[steps('gatewayConfig').containerSection.gatewayWebAppName]",
            "gatewayImageName": "[steps('gatewayConfig').containerSection.gatewayImageName]",
            "customerName": "[steps('gatewayConfig').containerSection.customerName]",
            "gatewayEncryptionKey": "[steps('gatewayConfig').encryptionSection.gatewayEncryptionKey]",
            "diagnosticUsername": "[steps('gatewayConfig').diagnosticSection.diagnosticUsername]",
            "diagnosticPassword": "[steps('gatewayConfig').diagnosticSection.diagnosticUsername]",
            "guacamoleInstanceName": "[steps('guacamoleConfig').guacamoleInstanceName]"
        }
    }
}
