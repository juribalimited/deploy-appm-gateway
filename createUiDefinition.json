{
    "$schema": "https://schema.management.azure.com/schemas/0.1.2-preview/CreateUIDefinition.MultiVm.json#",
    "handler": "Microsoft.Azure.CreateUIDef",
    "version": "0.1.2-preview",
    "parameters": {
        "basics": [],
        "steps": [
            {
                "name": "networkingConfig",
                "label": "Networking",
                "elements": [
                    {
                        "name": "networkSection",
                        "type": "Microsoft.Common.Section",
                        "elements": [
                            {
                                "name": "vnet",
                                "type": "Microsoft.Network.VirtualNetworkCombo",
                                "label": {
                                    "virtualNetwork": "Virtual network",
                                    "subnets": "Subnets"
                                },
                                "toolTip": {
                                    "virtualNetwork": "",
                                    "subnets": ""
                                },
                                "defaultValue": {
                                    "name": "vnet01",
                                    "addressPrefixSize": "/16"
                                },
                                "constraints": {
                                    "minAddressPrefixSize": "/16"
                                },
                                "options": {
                                    "hideExisting": false
                                },
                                "subnets": {
                                    "subnet1": {
                                        "label": "Desktop Gateway subnet",
                                        "defaultValue": {
                                            "name": "subnet-1",
                                            "addressPrefixSize": "/24"
                                        },
                                        "constraints": {
                                            "minAddressPrefixSize": "/24",
                                            "minAddressCount": 12,
                                            "requireContiguousAddresses": true
                                        }
                                    },
                                    "subnet2": {
                                        "label": "Apache Guacamole subnet",
                                        "defaultValue": {
                                            "name": "subnet-2",
                                            "addressPrefixSize": "/26"
                                        },
                                        "constraints": {
                                            "minAddressPrefixSize": "/26",
                                            "minAddressCount": 8,
                                            "requireContiguousAddresses": true
                                        }
                                    }
                                },
                                "visible": true
                            }
                        ],
                        "visible": true
                    },
                    {
                        "name": "nsgSection",
                        "type": "Microsoft.Common.Section",
                        "label": "Example section",
                        "elements": [
                            {
                                "name": "gatewayNetworkSecurityGroupName",
                                "type": "Microsoft.Common.TextBox",
                                "label": "Gateway Network Security Group Name",
                                "toolTip": "Defines the name for network security group used for Gateway WebApp",
                                "defaultValue": "gateway-nsg",
                                "constraints": {
                                    "required": true,
                                    "regex": "^[a-z0-9A-Z-]{3,40}$",
                                    "validationMessage": "The security group name must be between 3 and 40 characters long and contain letters, numbers and hyphens only."          
                                }
                            },
                            {
                                "name": "containerNetworkSecurityGroupName",
                                "type": "Microsoft.Common.TextBox",
                                "label": "Container Network Security Group Name",
                                "toolTip": "Defines the name for network security group used for Container",
                                "defaultValue": "container-nsg",
                                "constraints": {
                                    "required": true,
                                    "regex": "^[a-z0-9A-Z-]{3,40}$",
                                    "validationMessage": "The security group name must be between 3 and 40 characters long and contain letters, numbers and hyphens only."          
                                }
                            }
                        ],
                        "visible": true
                    }
                ]
            },
            {
                "name": "gatewayConfig",
                "label": "AppM Desktop Gateway",
                "elements": [
                    {
                        "name": "containerSection",
                        "type": "Microsoft.Common.Section",
                        "label": "Container settings",
                        "elements": [
                            {
                                "name": "gatewayWebAppName",
                                "type": "Microsoft.Common.TextBox",
                                "label": "Gateway WebApp Name",
                                "toolTip": "Defines the name for Azure gateway web app",
                                "defaultValue": "appm-gateway",
                                "constraints": {
                                    "required": true,
                                    "regex": "^[a-z0-9A-Z-]{3,40}$",
                                    "validationMessage": "The webapp name must be between 3 and 40 characters long and contain letters, numbers and hyphens only."          
                                }
                            },
                            {
                                "name": "gatewayImageName",
                                "type": "Microsoft.Common.TextBox",
                                "label": "Gateway Image Name",
                                "toolTip": "Defines the image to be used for Gateway container. This will default to latest available. Full list can be found here https://hub.docker.com/repository/docker/juriba/appmgateway/general",
                                "defaultValue": "sha-d9174c1",
                                "constraints": {
                                    "required": true,
                                    "regex": "^[a-z0-9A-Z-]{3,20}$",
                                    "validationMessage": "The image name must be between 3 and 20 characters long and contain letters, numbers and hyphens only."          
                                }
                            }
                        ],
                        "visible": true
                    },
                    {
                        "name": "encryptionSection",
                        "type": "Microsoft.Common.Section",
                        "label": "Encryption settings",
                        "elements": [
                            {
                                "name": "APPM_HEXKEY",
                                "type": "Microsoft.Common.TextBox",
                                "label": "Key",
                                "toolTip": "Value from AppM application to be used in Gateway container",
                                "constraints": {
                                    "required": true,
                                    "regex": "^[a-z0-9A-Z]{3,30}$",
                                    "validationMessage": "The hex key must be between 3 and 30 characters long and contain letters and numbers only."          
                                }
                            },
                            {
                                "name": "APPM_HEXIV",
                                "type": "Microsoft.Common.TextBox",
                                "label": "APPM_HEXIV",
                                "toolTip": "Value from AppM application to be used in Gateway container",
                                "constraints": {
                                    "required": true,
                                    "regex": "^[a-z0-9A-Z]{3,30}$",
                                    "validationMessage": "The hex key must be between 3 and 30 characters long and contain letters and numbers only."          
                                }
                            }
                        ],
                        "visible": true
                    },
                    {
                        "name": "diagnosticSection",
                        "type": "Microsoft.Common.Section",
                        "label": "Diagnostic settings",
                        "elements": [
                            {
                                "name": "APPM_USERNAME",
                                "type": "Microsoft.Common.TextBox",
                                "label": "APPM_USERNAME",
                                "toolTip": "Value from AppM application to be used in Gateway container",
                                "constraints": {
                                    "required": true,
                                    "regex": "^[a-z0-9A-Z]{3,15}$",
                                    "validationMessage": "The username must be between 3 and 15 characters long and contain letters and numbers only."          
                                }
                            },
                            {
                                "name": "APPM_PASSWORD",
                                "type": "Microsoft.Common.PasswordBox",
                                "label": {
                                    "password": "APPM_PASSWORD",
                                    "confirmPassword": "Confirm password"
                                },
                                "toolTip": "Value from AppM application to be used in Gateway container",
                                "constraints": {
                                    "required": true,
                                    "regex": "^[a-z0-9A-Z]{3,30}$",
                                    "validationMessage": "The password must be between 3 and 30 characters long and contain letters and numbers only."          
                                }
                            }
                        ],
                        "visible": true
                    }
                ]
            },
            {
                "name": "guacamoleConfig",
                "label": "Apache Guacamole",
                "elements": [            
                    {
                        "name": "containerInstanceName",
                        "type": "Microsoft.Common.TextBox",
                        "label": "Container Instance Name",
                        "toolTip": "Defines the name for Guacamole gateway container",
                        "defaultValue": "guacamole-ci",
                        "constraints": {
                            "required": true,
                            "regex": "^[a-z0-9A-Z-]{3,40}$",
                            "validationMessage": "The instance name must be between 3 and 40 characters long and contain letters, numbers and hyphens only."          
                        }
                    },
                    {
                        "name": "containerRestartPolicy",
                        "type": "Microsoft.Common.DropDown",
                        "label": "Container Restart Policy",
                        "toolTip": "The behavior of Azure runtime if gateway container has stopped. Defaults to Always restart.",
                        "defaultValue": "Always",
                        "constraints": {
                            "allowedValues": [
                                {
                                "label": "Always",
                                "value": "Always"
                                },
                                {
                                "label": "Never",
                                "value": "Never"
                                },
                                {
                                "label": "OnFailure",
                                "value": "OnFailure"
                                }
                            ]          
                        }
                    }
                ]
            }
        ],
        "outputs": {
            "virtualNetworkNewOrExisting": "[steps('networkingConfig').networkSection.vnet.newOrExisting]",
            "virtualNetworkName": "[steps('networkingConfig').networkSection.vnet.name]",
            "virtualNetworkAddressSpace": "[steps('networkingConfig').networkSection.vnet.addressPrefixes]",
            "containerSubnetName": "[steps('networkingConfig').networkSection.vnet.subnet2.name]",
            "containerSubnetRange": "[steps('networkingConfig').networkSection.vnet.subnet2.addressPrefixes]",
            "webAppSubnetName": "[steps('networkingConfig').networkSection.vnet.subnet1.name]",
            "webAppSubnetRange": "[steps('networkingConfig').networkSection.vnet.subnet1.addressPrefixes]",
            "gatewayNetworkSecurityGroupName": "[steps('networkingConfig').nsgSection.gatewayNetworkSecurityGroupName]",
            "containerNetworkSecurityGroupName": "[steps('networkingConfig').nsgSection.containerNetworkSecurityGroupName]",
            "gatewayWebAppName": "[steps('gatewayConfig').containerSection.gatewayWebAppName]",
            "gatewayImageName": "[steps('gatewayConfig').containerSection.gatewayImageName]",
            "APPM_HEXKEY": "[steps('gatewayConfig').encryptionSection.APPM_HEXKEY]",
            "APPM_HEXIV": "[steps('gatewayConfig').encryptionSection.APPM_HEXIV]",
            "APPM_USERNAME": "[steps('gatewayConfig').diagnosticSection.APPM_USERNAME]",
            "APPM_PASSWORD": "[steps('gatewayConfig').diagnosticSection.APPM_PASSWORD]",
            "containerInstanceName": "[steps('guacamoleConfig').containerInstanceName]",
            "containerRestartPolicy": "[steps('guacamoleConfig').containerRestartPolicy]"
        }
    }
}
